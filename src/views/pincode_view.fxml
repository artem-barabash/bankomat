   <children>
      <Pane prefHeight="380.0" prefWidth="609.0" style="-fx-background-color: REd;">
         <children>
            <GridPane prefHeight="380.0" prefWidth="609.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="298.0" minWidth="10.0" prefWidth="134.0" />
